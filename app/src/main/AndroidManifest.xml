<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:installLocation="auto" package="in.ngrail.NGERail">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- GCM connects to Internet Services. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- GCM requires a Google account. -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <!-- Keeps the processor from sleeping when a message is received. -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Creates a custom permission so only this app can receive its messages. -->
    <permission
        android:name="in.ngrail.NGERail.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="in.ngrail.NGRail.permission.C2D_MESSAGE" />

    <!-- This app has permission to register and receive data message. -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <uses-permission android:name="com.google.android.c2dm.intent.UNREGISTER" />

    <!-- Network State Permissions to detect Internet status -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permission to vibrate -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application android:allowBackup="true"
        android:name="in.ngrail.NGERail.Controller"
        android:icon="@mipmap/ngraillogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
            <activity android:name="in.ngrail.NGERail.MainScreen"
                android:screenOrientation="portrait"
                android:label="@string/app_name">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />

                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>
        <activity
            android:name="in.ngrail.NGERail.RegistrationActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.MainScreen"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.MainScreen" />
        </activity>
        <activity
            android:name="in.ngrail.NGERail.HomeScreenActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.MainScreen"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.MainScreen" />
        </activity>
        <activity
            android:name="in.ngrail.NGERail.PnrActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.HomeScreenActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.HomeScreenActivity" />
        </activity>
        <activity
            android:name="in.ngrail.NGERail.TrainsBetweenTwoStations"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.HomeScreenActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.HomeScreenActivity" />
        </activity>
        <activity
            android:name="in.ngrail.NGERail.TrainsBetweenTwoStationsList"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.TrainsBetweenTwoStations"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.TrainsBetweenTwoStations" />
        </activity>
        <activity
            android:name="in.ngrail.NGERail.AdvSeatAvail"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.TrainsBetweenTwoStationsList"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.TrainsBetweenTwoStationsList" />
        </activity>
        <activity
            android:name="in.ngrail.NGERail.SpotTrainMainActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.TrainsBetweenTwoStationsList"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.HomeScreenActivity" />
        </activity>

        <activity
            android:name="in.ngrail.NGERail.TrainRouteActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.HomeScreenActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.HomeScreenActivity" />
        </activity>
        <activity
            android:name="in.ngrail.NGERail.ContactUsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.HomeScreenActivity"
            android:label="@string/app_name" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="in.ngrail.NGERail.HomeScreenActivity" />
        </activity>

        <activity
            android:name="in.ngrail.NGERail.TrainsAtStation"
            android:screenOrientation="portrait"
            android:parentActivityName="in.ngrail.NGERail.HomeScreenActivity"
            android:label="@string/app_name" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="in.ngrail.NGERail.HomeScreenActivity" />
        </activity>
        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />

        <activity
            android:name="com.rzlts.appinbox.InboxActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.rzlts.appinbox.SettingActivity"
            android:theme="@android:style/Theme.Dialog"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.rzlts.appinbox.NotificationActivity">
        </activity>


        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.androidexample.gcm" />
            </intent-filter>
        </receiver>
        <receiver android:name="in.ngrail.NGERail.MySMSApp">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service android:name="in.ngrail.NGERail.GCMIntentService" />

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>
</manifest>
